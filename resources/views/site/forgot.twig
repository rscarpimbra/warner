{% extends 'master.twig' %}



{% block content %}

    <div class="flex min-h-full flex-col justify-center py-12 sm:px-6 lg:px-8">
        <div class="sm:mx-auto sm:w-full sm:max-w-md">
            <img class="mx-auto h-12 w-auto" src="{{ vGBImgLogo }}" alt="{{ appName }}">
            <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Forgot your Password</h2>
            <p class="mt-2 text-center text-sm text-gray-600">
                Enter your Username or Email Address to retrieve your password.
            </p>
        </div>

        <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
            <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
            <form class="space-y-6" action="{{ url_for('forgot.pw') }}" method="POST">

                {{ csrf() | raw}}
                <div>
                    <label class="block">
                        <span class="after:content-['*'] after:ml-0.5 after:text-red-500 block text-sm font-medium text-slate-700">
                            Username or Email address
                        </span>
                        <input 
                            type="email" 
                            id="txtUserName" 
                            name="user_name" 
                            class="mt-1 px-3 py-2 bg-white border shadow-sm border-slate-300 placeholder-slate-400 focus:outline-none focus:border-sky-500 focus:ring-sky-500 block w-full rounded-md sm:text-sm focus:ring-1" 
                            placeholder="you@example.com" 
                            autofocus />
                            <span class="text-sm font-small text-red-500">{{ errors.user_name | first }}  {{ ErrorUserName }}</span>
                    </label>        
                </div>

                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                    </div>

                    <div class="text-sm">

                        <span>Have a Password? Click <a href="/login" class="font-medium text-indigo-600 hover:text-indigo-500">here to Sign in</a></span>
                    </div>
                    </div>

                    <div>
                    <button 
                        type="submit" 
                        class="flex w-full justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Sign in</button>

                        <span class="mt-3 text-sm font-small text-green-500">{{ SuccessMessage }}</span>
                </div>
            </form>
            </div>
        </div>
    </div>


{% endblock %}