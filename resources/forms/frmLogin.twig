
<form class="frmLogin row g-3" method="post" action="{{ url_for('login.auth') }}">

    <div class="form-floating mb-3">
        <input type="email" class="form-control" id="txtUserName" name="user_name" placeholder="name@example.com" value="{{ old.user_name }}" autofocus>
        <label for="txtUserName">Email address</label>
        <span class="helper-text text-danger">{{ errors.user_name | first }} {{ ErrorUserName }}</span>
    </div>

        <div class="form-floating mb-3">
        <input type="password" class="form-control" id="txtPassword" name="user_password">
        <label for="txtPassword">Password</label>
        <span class="helper-text text-danger text-end">{{ errors.user_password | first }} {{ ErrorPassword }} </span>
    </div>




    <div class="col-sm-12 col-md-12 col-lg-12">

        <div class="row">
            <div class="col-sm-12 col-md-6 col-lg-6">
                <div class="mt-5 mb-3 text-center">
                    <input class="form-check-input" type="checkbox" value="" id="txtRemember">
                    <label class="form-check-label" for="txtRemember">
                        Remember Me
                    </label>
                </div>
            </div>

            <div class="col-sm-12 col-md-6 col-lg-6">
                <div class="mt-5 mb-3 text-center">
                    <input class="form-check-input" type="checkbox" value="" id="txtRemember">
                    <label class="form-check-label" for="txtRemember">
                        Remember Me
                    </label>
                </div>           
            </div>        
        </div>
    </div>


    <button type="submit" class="btn btn-primary rounded">Log In</button>

    <div class="text-center mt-5">
        <img src="/assets/images/warne-smr.png" alt="Warner Academy" class="d-inline-block img-war">
    </div>
</form>


